            <ImageView
                android:id="@+id/imgV4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/star1"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/imgV5"
                android:layout_width="50dp"
                android:layout_height="50dp"
